{% extends 'base.html.twig' %}

{% block body %}
<div class="container  mb-2">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title text-center mb-3">Inscription</h1>

          {{ form_start(formSecurity) }}

          <div class="mb-2">
            {{ form_label(formSecurity.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formSecurity.username, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom....'}}) }}
            {{ form_errors(formSecurity.username) }}
          </div>

          <div class="mb-2">
            {{ form_label(formSecurity.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formSecurity.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email....'}}) }}
            {{ form_errors(formSecurity.email) }}
          </div>

          <div class="mb-2">
            {{ form_label(formSecurity.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formSecurity.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
            {{ form_errors(formSecurity.password) }}
          </div>

          <div class="mb-2">
            {{ form_label(formSecurity.confirm_password, 'Confirmation du mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formSecurity.confirm_password, {'attr': {'class': 'form-control', 'placeholder': 'Rétaper votre mot de passe'}}) }}
            {{ form_errors(formSecurity.confirm_password) }}
          </div>

          <button type="submit" class="btn btn-success w-100">Inscription</button>

          <p class="mt-3 text-center">
            Avez-vous déjà un compte ? <a href="{{ path('security_login') }}" class="custom-link">Connexion</a>
          </p>

          {{ form_end(formSecurity) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
