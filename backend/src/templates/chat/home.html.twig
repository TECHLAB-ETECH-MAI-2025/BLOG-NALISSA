{% extends 'base.html.twig' %}

{% block title %}SÃ©lectionnez un utilisateur{% endblock %}

{% block body %}
<div class="container" style="max-width: 600px; margin: 50px auto;">

    <h1 style="text-align: center; margin-bottom: 30px; font-family: Arial, sans-serif;">
        Choisissez un utilisateur pour chatter
    </h1>

    {% if users is not empty %}
        <div style="display: flex; flex-direction: column; gap: 15px;">
            {% for user in users %}
                <a href="{{ path('chat_index', {'receiverId': user.id}) }}" 
                   style="
                        display: block;
                        padding: 15px;
                        text-align: center;
                        background-color: #f8f9fa;
                        border: 1px solid #ddd;
                        border-radius: 8px;
                        text-decoration: none;
                        color: #333;
                        transition: 0.3s;
                        font-weight: bold;
                   "
                   onmouseover="this.style.backgroundColor='#007bff'; this.style.color='#fff';"
                   onmouseout="this.style.backgroundColor='#f8f9fa'; this.style.color='#333';"
                >
                    {{ user.username }}
                </a>
            {% endfor %}
        </div>
    {% else %}
        <div style="text-align: center; color: #777;">
            Aucun utilisateur disponible pour chatter.
        </div>
    {% endif %}
</div>
{% endblock %}
