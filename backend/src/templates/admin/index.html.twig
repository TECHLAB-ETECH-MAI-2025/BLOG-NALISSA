{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
    <style>
        .admin-container {
            padding: 2rem;
            background-color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .admin-container h1, .admin-container h2, .admin-container h3 {
            color: #3182CE;
        }

        .admin-menu ul {
            list-style: none;
            padding: 0;
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .admin-menu a {
            text-decoration: none;
            color: #3182CE;
            font-weight: bold;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .admin-menu a:hover {
            background-color: #ebf8ff;
        }

        .alert {
            margin-bottom: 1rem;
        }

     .dashboard-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 1rem;
        }


        .card {
            background-color: white;
            border: 1px solid #ddd;
            border-left: 5px solid #3182CE;
            border-radius: 8px;
            padding: 1.5rem;
            width: 100%;
            max-width: 300px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .card h3 {
            margin-top: 0;
        }

        .count {
            font-size: 2rem;
            font-weight: bold;
            color: #3182CE;
        }

        .btn {
            margin-top: 1rem;
        }

        .quick-actions {
            margin-top: 2rem;
        }

        .quick-actions .btn {
            background-color: #38A169;
            color: white;
        }

        .quick-actions .btn:hover {
            background-color: #2F855A;
        }

        @media (max-width: 768px) {
            .dashboard-cards {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="admin-container">
        <h1>Menu d'administration</h1>

        <nav class="admin-menu">
            <ul>
                <li><a href="{{ path('admin_dashboard') }}">Tableau de bord</a></li>
                <li><a href="{{ path('admin_users') }}">Gestion des utilisateurs</a></li>
                <li><a href="{{ path('app_home') }}">Retour au site</a></li>
            </ul>
        </nav>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h2>Tableau de bord d'administration</h2>

        <div class="dashboard-cards">
            <div class="card">
                <h3>Utilisateurs</h3>
                <p class="count">{{ userCount }}</p>
                <a href="{{ path('admin_users') }}" class="btn btn-primary">Voir les détails</a>
            </div>

            <div class="card">
                <h3>Utilisateurs vérifiés</h3>
                <p class="count">{{ verifiedCount }}</p>
                <a href="{{ path('admin_users') }}" class="btn btn-primary">Voir les détails</a>
            </div>

            <div class="card">
                <h3>Administrateurs</h3>
                <p class="count">{{ adminCount }}</p>
                <a href="{{ path('admin_users') }}" class="btn btn-primary">Voir les détails</a>
            </div>
        </div>

        <section class="quick-actions">
            <h3>Actions rapides</h3>
            <a href="{{ path('admin_user_new') }}" class="btn">Créer un nouvel utilisateur</a>
        </section>
    </section>
{% endblock %}
