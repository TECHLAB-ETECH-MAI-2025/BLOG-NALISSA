{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier mon profil</h1>

    <!-- Menu -->
    <div class="mb-3">
        <a href="{{ path('app_profile') }}" class="btn btn-outline-primary me-2">Mon profil</a>
        <a href="{{ path('app_profile_change_password') }}" class="btn btn-outline-secondary me-2">Changer mon mot de passe</a>
        <a href="{{ path('logout') }}" class="btn btn-outline-danger">DÃ©connexion</a>
    </div>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Formulaire -->
    <div class="card">
        <div class="card-body">
            {{ form_start(profileForm) }}

            <div class="mb-3">
                {{ form_label(profileForm.firstName) }}
                {{ form_widget(profileForm.firstName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(profileForm.firstName) }}
            </div>

            <div class="mb-3">
                {{ form_label(profileForm.lastName) }}
                {{ form_widget(profileForm.lastName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(profileForm.lastName) }}
            </div>

            <div class="mb-3">
                {{ form_label(profileForm.email) }}
                {{ form_widget(profileForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(profileForm.email) }}
            </div>

            <button class="btn btn-primary">Enregistrer les modifications</button>

            {{ form_end(profileForm) }}
        </div>
    </div>
</div>
{% endblock %}
