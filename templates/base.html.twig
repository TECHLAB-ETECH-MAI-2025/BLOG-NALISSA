<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Blog Nalissa - Le blog tech pro{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('styles/bootstrap.min.css') }}" />

    <style>
        /* Th√®me clair am√©lior√© */
        body {
            background-color: #F0F4F8;
            color: #1A202C;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            transition: background-color 0.3s, color 0.3s;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        a {
            color: #3182CE;
            text-decoration: none;
            transition: color 0.3s;
        }
        a:hover, a:focus {
            color: #63B3ED;
            text-decoration: underline;
        }

        .navbar {
            background-color: #fff !important;
            border-bottom: 2px solid #CBD5E0;
            box-shadow: 0 2px 6px rgb(0 0 0 / 0.05);
            transition: background-color 0.3s, border-color 0.3s;
            font-weight: 600;
        }
        .navbar-brand {
            color: #3182CE !important;
            font-size: 1.5rem;
            font-weight: 700;
        }
        .nav-link {
            color: #1A202C !important;
            font-weight: 500;
            margin-right: 1rem;
            transition: color 0.3s;
        }
        .nav-link.active, .nav-link:hover {
            color: #63B3ED !important;
        }

        #darkModeToggle {
            cursor: pointer;
            border: none;
            background: #3182CE;
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: background-color 0.3s;
        }
        #darkModeToggle:hover {
            background-color: #63B3ED;
        }

        /* Container principal pour le contenu */
        .container {
            flex: 1 0 auto;
            padding: 2rem 1rem 3rem;
            max-width: 960px;
        }

        /* Zone d‚Äôaccueil */
        .hero {
            background: white;
            border-radius: 8px;
            padding: 2rem 2.5rem;
            margin-bottom: 3rem;
            box-shadow: 0 4px 12px rgb(0 0 0 / 0.05);
            text-align: center;
        }
        .hero h1 {
            font-size: 2.8rem;
            margin-bottom: 0.5rem;
            color: #3182CE;
        }
        .hero p {
            font-size: 1.2rem;
            margin-bottom: 1.8rem;
            color: #4A5568;
        }
        .btn-primary {
            background-color: #3182CE;
            border-color: #3182CE;
            color: white;
            padding: 0.7rem 1.4rem;
            font-size: 1.1rem;
            border-radius: 6px;
            box-shadow: 0 4px 8px rgb(49 130 206 / 0.3);
            transition: background-color 0.3s, border-color 0.3s;
            font-weight: 600;
        }
        .btn-primary:hover {
            background-color: #63B3ED;
            border-color: #63B3ED;
            color: white;
            box-shadow: 0 6px 14px rgb(99 179 237 / 0.45);
            text-decoration: none;
        }

        /* Article cards (exemple structure, √† utiliser dans block body) */
        .card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
            margin-bottom: 2rem;
            transition: box-shadow 0.3s;
        }
        .card:hover {
            box-shadow: 0 6px 16px rgb(0 0 0 / 0.15);
        }
        .card-body {
            padding: 1.6rem 1.8rem;
        }
        .card-title {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 0.6rem;
            color: #2C5282;
        }
        .card-text {
            color: #4A5568;
            font-size: 1rem;
            margin-bottom: 1rem;
        }
        .card-link {
            font-weight: 600;
            color: #3182CE;
            text-decoration: none;
        }
        .card-link:hover {
            color: #63B3ED;
            text-decoration: underline;
        }

        /* Footer */
        footer {
            flex-shrink: 0;
            background-color: #EDF2F7;
            border-top: 1px solid #CBD5E0;
            padding: 1.5rem 1rem;
            text-align: center;
            color: #718096;
            font-size: 0.9rem;
            margin-top: 4rem;
            user-select: none;
        }
        footer a {
            color: #3182CE;
            margin: 0 8px;
            transition: color 0.3s;
            text-decoration: none;
        }
        footer a:hover {
            color: #63B3ED;
            text-decoration: underline;
        }

        /* Responsive tweaks */
        @media (max-width: 576px) {
            .hero h1 {
                font-size: 2rem;
            }
            .btn-primary {
                font-size: 1rem;
                padding: 0.6rem 1rem;
            }
            .nav-link {
                margin-right: 0.5rem;
                font-size: 0.9rem;
            }
        }
    </style>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üìù</text></svg>">

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const toggle = document.getElementById('darkModeToggle');
                const body = document.body;

                if(localStorage.getItem('darkMode') === 'enabled'){
                    body.classList.add('dark-mode');
                }

                toggle.addEventListener('click', () => {
                    body.classList.toggle('dark-mode');
                    if(body.classList.contains('dark-mode')){
                        localStorage.setItem('darkMode', 'enabled');
                    } else {
                        localStorage.setItem('darkMode', 'disabled');
                    }
                });
            });
        </script>
    {% endblock %}
