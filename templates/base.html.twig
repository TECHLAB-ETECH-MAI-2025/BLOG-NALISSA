<body>
<nav class="navbar navbar-expand-lg sticky-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">Blog Nalissa</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'home' %}active{% endif %}" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'blog' %}active{% endif %}" href="{{ path('blog') }}">Blog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'blog_create' %}active{% endif %}" href="{{ path('articles_list') }}">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'category' %}active{% endif %}" href="{{ path('category_index') }}">Cat√©gories</a>
                </li>
               
                {% if not app.user%}
                    <li class="nav-item ms-3">
                        <a class="btn btn-outline-primary btn-sm" href="{{ path('security_login') }}">Connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item ms-3">
                        <a class="btn btn-outline-primary btn-sm" href="{{ path('logout') }}">Deconnexion</a>
                    </li>
                {% endif%}
                <li class="nav-item ms-3 d-flex align-items-center">
                    <button id="darkModeToggle" aria-label="Basculer en mode sombre" title="Basculer en mode sombre">üåô</button>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main class="container" role="main">
    {% block body %}
    {# Injecter les articles, formulaires, etc #}
    {% endblock %}
</main>

