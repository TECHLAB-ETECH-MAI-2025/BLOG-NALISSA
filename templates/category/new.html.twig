{% extends 'base.html.twig' %}

{% block title %}
{% if editMode %}
                Modifier l'article
            {% else %}
                Créer un nouvel article
{% endif %}

{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 700px;">
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h1 class="mb-4 text-center text-primary">
            {% if editMode %}
                Modifier la catgeorie
            {% else %}
                Créer une  categorie
            {% endif %}
        </h1>
        <div class="mb-4 text-end">
        <a href="{{ path('category_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i>← Retour à la liste
        </a>
    </div>
    </div>

    <div class="card shadow-sm p-4">
        {{ form_start(formCategory, 
            {
                            'action': path('category_new'),
                            'method': 'POST'
            })
         }}

    

            <!-- Champ Titre -->
            <div class="mb-3">
                {{ form_label(formCategory.title) }}
                {{ form_widget(formCategory.title, {'attr': {'placeholder': "Titre de la categorie", 'class': 'form-control'}}) }}
                {{ form_errors(formCategory.title) }}
            </div>

           

            <!-- Champ Contenu -->
            <div class="mb-3">
                {{ form_label(formCategory.description) }}
                {{ form_widget(formCategory.description, {'attr': {'placeholder': "Contenu de la categorie", 'class': 'form-control', 'rows': 8}}) }}
                {{ form_errors(formCategory.description) }}
            </div>

          

            <!-- Bouton de soumission -->
            <div class="text-end">
                <button class="btn btn-success">
                    {% if editMode %}
                        <i class="bi bi-save"></i> Enregistrer les modifications
                    {% else %}
                        <i class="bi bi-plus-circle"></i> Ajouter la categorie
                    {% endif %}
                </button>
            </div>

        {{ form_end(formCategory) }}
    </div>
</div>


{% endblock %}
